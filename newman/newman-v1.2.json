        {
          "name": "Login user",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login successful\", function () {",
                  "  pm.response.to.have.status(200);",
                  "",
                  "  let token;",
                  "",
                  "  // Tenta extrair token de JSON (ex: { token: \"Bearer ...\" })",
                  "  try {",
                  "    const obj = pm.response.json();",
                  "    token = obj.token || obj.userToken || obj.access_token || obj.accessToken;",
                  "  } catch (e) {",
                  "    // fallback para texto simples",
                  "    token = pm.response.text();",
                  "  }",
                  "",
                  "  // limpar espa√ßos e aspas (caso venha \"Bearer ...\")",
                  "  token = String(token || \"\").trim().replace(/^\"+|\"+$/g, \"\");",
                  "",
                  "  // garantir prefixo Bearer",
                  "  if (token && !token.startsWith(\"Bearer \")) {",
                  "    token = \"Bearer \" + token;",
                  "  }",
                  "",
                  "  pm.collectionVariables.set(\"userToken\", token);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"useress1\",\n    \"password\": \"cncs**2026\"\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "https://grupo1/login",
              "protocol": "https",
              "host": ["grupo1"],
              "path": ["login"]
            }
          }
        }
